<Context path="/bean_chat" docBase="www">
<Resource
	name="jdbc/bean_chat"
	auth="Container"
	type="javax.sql.DataSource"
	driverClassName="com.mysql.jdbc.Driver"
	loginTimeout="10"
	validationQuery="SELECT 1 FROM DUAL"
	maxWait="5000"
	username="root"
	password="1234"
	testOnBorrow="true"
	url="jdbc:mysql://localhost:3306/beanchat"/>
	<ResourceLink type="javax.sql.data.DataSouce"
	name="jdbc/baenchat"
	global="jdbc/baenchat"/>
</Context>